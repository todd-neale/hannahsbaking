<div class="container mt-3">
  <div class="col-xs-12">
    <% @posts.each_with_index do |post, index| %>
     <% if index.even? %>
      <div class="card-product card-product-left my-3">
        <%= filepicker_image_tag post.pictures %>
        <div class="card-product-infos text-center">
          <h6><%= post.category %></h6>
          <h2><%= link_to post.title.upcase, post_path(post) %></h2>
          <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
          <p><%= post.tagline %></p>
        </div>
      </div>
      <% else %>
        <div class="card-product card-product-right my-3">
          <%= filepicker_image_tag post.pictures %>
          <div class="card-product-infos text-center">
            <h6><%= post.category %></h6>
            <h2><%= link_to post.title.upcase, post_path(post) %></h2>
            <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
            <p><%= post.tagline %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

